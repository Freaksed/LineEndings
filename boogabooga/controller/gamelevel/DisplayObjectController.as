/** DisplayObjectController  *	---------------------------------------------------------------------------- *  *	@desc:  *		This is the base class for DisplayObject Controller classes.  *	  *	@author:   *		Christian Widodo, [christian@avatarlabs.com]  *	---------------------------------------------------------------------------- */	package com.boogabooga.controller.gamelevel	{		import flash.events.EventDispatcher;				import com.avatarlabs.utils.console.ConsoleBroadcaster;				import com.boogabooga.controller.gamelevel.IDisplayObjectController;		import com.boogabooga.ui.gamelevel.Gameboard;				public class DisplayObjectController extends EventDispatcher implements IDisplayObjectController		{			protected var _debug:Boolean;						protected var _gameboardReference:Gameboard;						/** Constructor			  *	---------------------------------------------------------------------------- */			 	public function DisplayObjectController()				{									}							/** set/get gameboardReference			  *	---------------------------------------------------------------------- */				public function set gameboardReference( g:Gameboard ):void				{					this._gameboardReference = g;									}				public function get gameboardReference():Gameboard				{					return this._gameboardReference;				}							/** init			  *	---------------------------------------------------------------------- */				public function init():void				{					_debug = false;				}							/** pause			  *	---------------------------------------------------------------------- */				public function pause():void {}							/** unpause			  *	---------------------------------------------------------------------- */				public function unpause():void {}							/** kill			  *	---------------------------------------------------------------------- */				public function kill():void				{					_gameboardReference = null;				}		}	}