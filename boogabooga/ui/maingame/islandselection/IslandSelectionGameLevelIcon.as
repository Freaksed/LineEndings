------------------------------------------------------------- */				override public function dynamicInit():void				{					super.dynamicInit();				}							/** kill			  *	---------------------------------------------------------------------------- */				override public function kill():void				{					super.kill();				}							/** handleClicked			  *	---------------------------------------------------------------------------- 				override protected function handleClicked( event:Event ):void				{					dispatchEvent( new CustomEvent("onIconClick", {village:_village}) );				}*/						}	}