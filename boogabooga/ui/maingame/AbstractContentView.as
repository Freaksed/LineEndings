/** AbstractContentView  *	---------------------------------------------------------------------------- *  *	@author:  *		Christian Widodo [christian@avatarlabs.com]  *	---------------------------------------------------------------------------- */ 	package com.boogabooga.ui.maingame	{		import flash.display.MovieClip;		import flash.events.Event;		import flash.events.EventDispatcher;				import com.avatarlabs.utils.events.CustomEvent;				import com.boogabooga.ui.maingame.IContentView;				public class AbstractContentView extends EventDispatcher implements IContentView		{			protected var _contentClip:MovieClip;			protected var _isContentVisible:Boolean;			protected var _id:int;						public static const VIEW_PLAY:int = 0;			public static const VIEW_ARCHEOLOGY:int = 1;			public static const VIEW_STORE:int = 2;			public static const VIEW_JOURNAL:int = 3;			public static const VIEW_MESSAGE:int = 4;						/**	Stage Instances **/			/**	End of Stage Instances **/						/** Constructor			  *	---------------------------------------------------------------------------- */				public function AbstractContentView()				{					//init();				}								public function set contentClip( m:MovieClip ):void { _contentClip = m; }				public function get contentClip():MovieClip { return _contentClip; }								public function get isContentVisible():Boolean { return _isContentVisible; }								public function set id( i:int ):void { _id = i; }				public function get id():int { return _id; }								public function init():void				{					_isContentVisible = false;				}							/** show			  *	---------------------------------------------------------------------------- *			  *	Shows the view.			  *	---------------------------------------------------------------------------- */				public function show():void				{					_contentClip.visible = true;					_isContentVisible = true;										viewDidAppear();				}							/** viewDidAppear			  *	---------------------------------------------------------------------------- *			  *	This function is called when the view appears.			  *	---------------------------------------------------------------------------- */				protected function viewDidAppear():void				{					dispatchEvent( new CustomEvent("onViewDidAppear") );				}							/** hide			  *	---------------------------------------------------------------------------- *			  *	Hides the view.			  *	---------------------------------------------------------------------------- */				public function hide():void				{					_contentClip.visible = false;					_isContentVisible = false;										viewDidDisappear();				}							/** viewDidDisappear			  *	---------------------------------------------------------------------------- *			  *	This function is called when the view disappears.			  *	---------------------------------------------------------------------------- */				protected function viewDidDisappear():void				{					dispatchEvent( new CustomEvent("onViewDidDisappear") );				}		}	}