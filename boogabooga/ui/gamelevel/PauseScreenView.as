/** PauseScreenView  *	---------------------------------------------------------------------------- *  *	@author:  *		Christian Widodo [christian@avatarlabs.com]  *	---------------------------------------------------------------------------- */ 	package com.boogabooga.ui.gamelevel	{		import flash.display.Bitmap;		import flash.display.MovieClip;		import flash.events.Event;		import flash.events.EventDispatcher;		import flash.geom.Point;		import flash.text.TextField;		import flash.text.TextFieldAutoSize;		import flash.text.TextFormat;				import com.avatarlabs.utils.UtilFunctions;		import com.avatarlabs.utils.cache.BitmapDataManager;		import com.avatarlabs.utils.console.ConsoleBroadcaster;		import com.avatarlabs.utils.events.CustomEvent;		import com.avatarlabs.utils.events.EventNotificationCenter;		import com.avatarlabs.utils.sound.SoundEffectPlayer;		import com.avatarlabs.utils.text.TextFormatting;		import com.avatarlabs.utils.userinterface.DynamicUIButton;		import com.greensock.TweenLite;				import com.boogabooga.data.StringsIndex;		import com.boogabooga.data.maingame.Village;		import com.boogabooga.data.gamelevel.AbstractGameObject;		import com.boogabooga.data.gamelevel.GameLevelDataIndex;		import com.boogabooga.events.BoogaEvent;		import com.boogabooga.events.GameLevelEvent;				public class PauseScreenView extends EventDispatcher		{			protected var _contentClip:MovieClip;						protected var _resumeClip:DynamicUIButton;						/**	Stage Instances **/			public var resume_mc:MovieClip;			/**	End of Stage Instances **/						/** Constructor			  *	---------------------------------------------------------------------------- */				public function PauseScreenView()				{					//init();				}								public function set contentClip( m:MovieClip ):void				{					_contentClip = m;					_contentClip.stop();										resume_mc = _contentClip.resume_mc;					resume_mc.mouseChildren = false;										_resumeClip = new DynamicUIButton();					_resumeClip.dynamicClip = resume_mc;					_resumeClip.dynamicInit();									}				public function get contentClip():MovieClip { return _contentClip; }							/** init			  *	---------------------------------------------------------------------------- */				public function init():void				{					_resumeClip.addEventListener( "onClick", handleResumeClicked, false, 0, true );					_resumeClip.addEventListener( "onSetFocus", handleResumeRolledOver, false, 0, true );					_resumeClip.addEventListener( "onKillFocus", handleResumeRolledOut, false, 0, true );										TextFormatting.formatTextWithFontName( resume_mc.label_mc.label_txt, "RESUME", "Lithos Pro Black", false, TextFieldAutoSize.CENTER );				}								public function kill():void				{									}							/** show			  *	---------------------------------------------------------------------------- */				public function show():void				{					_contentClip.visible = true;				}							/** hide			  *	---------------------------------------------------------------------------- */				public function hide():void				{					_contentClip.visible = false;				}								protected function handleResumeClicked( event:Event ):void				{					SoundEffectPlayer.getInstance().playLibrarySound( "sfx_mouse_click.wav", false, "sfx_mouse_click.wav", "sfx_mouse_click.wav", SoundEffectPlayer.SOUND_PLAYER_SFX );										EventNotificationCenter.getInstance().sendSignal( GameLevelEvent.ON_RESUME_CLICKED, this );				}								protected function handleResumeRolledOver( event:Event ):void				{					EventNotificationCenter.getInstance().sendSignal( BoogaEvent.ON_TEXT_HOVER_SHOW, this, {clip:_resumeClip.dynamicClip, text:StringsIndex.getInstance().getStringByName("GAME_LEVEL_RESUME")} );					SoundEffectPlayer.getInstance().playLibrarySound( "sfx_mouse_rollover.wav", false, "sfx_mouse_rollover.wav", "sfx_mouse_rollover.wav", SoundEffectPlayer.SOUND_PLAYER_SFX );				}								protected function handleResumeRolledOut( event:Event ):void				{					EventNotificationCenter.getInstance().sendSignal( BoogaEvent.ON_TEXT_HOVER_HIDE, this );				}						}	}