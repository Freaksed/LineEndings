/** GameLevelDisplayLayerItem  *	---------------------------------------------------------------------------- *  *	@desc:  *		This class organizes the layering system of GameLevelDisplayObjects  *		The layering system goes from the furthest tile, the top right tile, as  *		layer #1 all the way to the bottom left tile as layer #15.  *	@author:   *		Christian Widodo, [christian@avatarlabs.com]  *	---------------------------------------------------------------------------- */	package com.boogabooga.ui.gamelevel	{		import flash.display.MovieClip;		import flash.events.*;		import flash.errors.*;		import flash.utils.getDefinitionByName;				public class GameLevelDisplayLayerItem extends EventDispatcher		{			protected var _contentClip:MovieClip;						/**	Stage Instances **/			public var backgroundElements_mc:MovieClip;			public var shadowElements_mc:MovieClip;			public var foregroundElements_mc:MovieClip;			public var projectileElements_mc:MovieClip;			/**	End of Stage Instances **/						public static const LAYER_FOREGROUND:int = 0;			public static const LAYER_BACKGROUND:int = 1;			public static const LAYER_SHADOW:int = 2;			public static const LAYER_PROJECTILE:int = 3;						/** Constructor			  *	---------------------------------------------------------------------- */				public function GameLevelDisplayLayerItem()				{									}							/** set/get contentClip			  *	---------------------------------------------------------------------------- */				public function set contentClip( m:MovieClip ):void				{					_contentClip = m;					_contentClip.gotoAndStop(1);										backgroundElements_mc = _contentClip.backgroundElements_mc;					shadowElements_mc = _contentClip.shadowElements_mc;					foregroundElements_mc = _contentClip.foregroundElements_mc;					projectileElements_mc = _contentClip.projectileElements_mc;										backgroundElements_mc.mouseEnabled = false;					shadowElements_mc.mouseEnabled = false;					foregroundElements_mc.mouseEnabled = false;					foregroundElements_mc.mouseChildren = false;					projectileElements_mc.mouseEnabled = false;				}				public function get contentClip():MovieClip { return _contentClip; }								public function init():void				{									}								public function getLayerClip( id:int ):MovieClip				{					if( id == LAYER_BACKGROUND )						return backgroundElements_mc;					else if( id == LAYER_SHADOW )						return shadowElements_mc;					else if( id == LAYER_FOREGROUND )						return foregroundElements_mc;					else if( id == LAYER_PROJECTILE )						return projectileElements_mc;										return foregroundElements_mc; 				}								public function kill():void				{					while( backgroundElements_mc.numChildren > 0 )						backgroundElements_mc.removeChildAt(0);										while( shadowElements_mc.numChildren > 0 )						shadowElements_mc.removeChildAt(0);										while( foregroundElements_mc.numChildren > 0 )						foregroundElements_mc.removeChildAt(0);										while( projectileElements_mc.numChildren > 0 )						projectileElements_mc.removeChildAt(0);				}								public function isInThisLayer( clip:MovieClip ):Boolean				{					//if( clip == backgroundElements_mc || clip == shadowElements_mc || clip == foregroundElements_mc || clip == projectile					return false;				}		}			}