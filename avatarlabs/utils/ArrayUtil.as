/** ArrayUtil  *	---------------------------------------------------------------------------- *  *	@desc:  *		Array utility functions.  *	@author:   *		Christian Widodo, [christian@avatarlabs.com]  *	---------------------------------------------------------------------------- */	package com.avatarlabs.utils	{				public class ArrayUtil extends Object		{						/** Constructor			  *	---------------------------------------------------------------------- */				public function ArrayUtil()				{									}							/** find			  *	---------------------------------------------------------------------- *			  *	Finds an element, needle, inside the array, haystack.			  *	You can also find the element using a custom property instead of			  *		comparing the objects directly.			  *	---------------------------------------------------------------------- */				public static function find( haystack:Array, needle:*, customProperty:*=null ):*				{					var haystackLength:int = haystack.length;										for( var i:uint=0; i<haystackLength; ++i )					{						if( customProperty != null )						{							if( haystack[i][customProperty] == needle[customProperty] )								return haystack[i];						}						else						{							if( haystack[i] == needle )								return haystack[i];						}					}										return null;				}							/** remove			  *	---------------------------------------------------------------------- *			  *	Removes an element, needle, from the array, haystack.			  *	You can also remove the element using a custom property instead of			  *		comparing the objects directly.			  *	---------------------------------------------------------------------- */				public static function remove( haystack:Array, needle:*, customProperty:*=null ):*				{					var haystackLength:int = haystack.length;										for( var i:uint=0; i<haystackLength; ++i )					{						if( customProperty != null && haystack[i][customProperty] == needle[customProperty] )						{							//haystack[i] = null;							return haystack.splice( i, 1 )[0];							//return true;						}						else if( haystack[i] == needle )						{							//haystack[i] = null;							return haystack.splice( i, 1 )[0];							//return true;						}					}										return null;				}								public static function removeAll( haystack:Array ):void				{					while( haystack.length > 0 )					{						haystack[0] = null;						haystack.splice( 0, 1 );					}				}								public static function randomSort( a:Object, b:Object ):int				{					return Math.round( Math.random() * 2 ) - 1;				}								public static function toString( array:Array ):String				{					var outputString:String = "";					var arrayLength:int = array.length;										for( var i:uint=0; i<arrayLength; ++i )					{						outputString += array[i].toString()+"\n";					}										return outputString;				}								public static function areEqual( array1:Array, array2:Array ):Boolean				{					if( array1.length == array2.length )					{						var arrayLength:int = array1.length;												for( var i:int=0; i<arrayLength; ++i )						{							if( array1[i] != array2[i] )								return false;						}												return true;					}										return false;				}		}			}