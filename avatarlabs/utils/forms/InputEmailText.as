/**	InputEmailText  *	--------------------------------------------------------- *  *	@desc:  *		an input text field class that will let users define  *		custom error message, custom textfield color  *	--------------------------------------------------------- *  *	@developer:	Christian Widodo [christian@avatarlabs.com]  *	--------------------------------------------------------- */    	package com.avatarlabs.utils.forms	{		import flash.display.MovieClip;		import flash.events.*;		import flash.text.TextField;				import com.avatarlabs.utils.console.ConsoleBroadcaster;				public class InputEmailText extends MovieClip		{			private var defaultLabel:String;			private var errorLabel:String;						private var defaultColor:uint;			private var onBlurColor:uint;			private var errorColor:uint;						/**	Constructor			  *	----------------------------------------------------- */				public function InputEmailText()				{					defaultLabel = "";					errorLabel = "";										input_txt.addEventListener( FocusEvent.FOCUS_IN, handleOnFocus );					input_txt.addEventListener( FocusEvent.FOCUS_OUT, handleOnBlur );										defaultColor = 0x000000;					errorColor = 0xFF0000;				}							/**	setDefaultLabel			  *	---------------------------------------------------------- */				public function setDefaultLabel( l:String ):void				{					ConsoleBroadcaster.broadcast( "InputEmailText", "setDefaultLabel("+l+");" );										defaultLabel = l;										input_txt.text = defaultLabel;				}							/**	setErrorLabel			  *	---------------------------------------------------------- */				public function setErrorLabel( l:String ):void				{					ConsoleBroadcaster.broadcast( "InputEmailText", "setErrorLabel("+l+");" );										errorLabel = l;				}							/**	setDefaultColor			  *	---------------------------------------------------------- */				public function setDefaultColor( c:uint ):void				{					ConsoleBroadcaster.broadcast( "InputEmailText", "setDefaultColor("+c+");" );										defaultColor = c;				}							/**	setErrorColor			  *	---------------------------------------------------------- */				public function setErrorColor( c:uint ):void				{					ConsoleBroadcaster.broadcast( "InputEmailText", "setErrorColor("+c+");" );										errorColor = c;				}							/**	setOnBlurColor			  *	---------------------------------------------------------- */				public function setOnBlurColor( c:uint ):void				{					ConsoleBroadcaster.broadcast( "InputEmailText", "setOnBlurColor("+c+");" );										onBlurColor = c;				}							/**	handleOnFocus			  *	---------------------------------------------------------- */				public function handleOnFocus( event:FocusEvent ):void				{					ConsoleBroadcaster.broadcast( "InputEmailText", "handleOnFocus();" );										input_txt.textColor = defaultColor;										if ( input_txt.text == defaultLabel || input_txt.text == errorLabel )					{						input_txt.text = "";					}				}							/**	handleOnBlur			  *	---------------------------------------------------------- */				public function handleOnBlur( event:FocusEvent ):void				{					ConsoleBroadcaster.broadcast( "InputEmailText", "handleOnBlur();" );										if ( input_txt.text == "" )					{						input_txt.textColor = errorColor;						input_txt.text = errorLabel;					}					else					{						input_txt.textColor = onBlurColor;					}				}							/**	isValid			  *	returns false if text is the same as defaultLabel or errorLabel			  *	returns true otherwise			  *	---------------------------------------------------------- */				public function isValid():Boolean				{					ConsoleBroadcaster.broadcast( "InputEmailText", "isValid();" );										if ( input_txt.text == defaultLabel || input_txt.text == errorLabel )						return false;					else						return true;				}							/**	getValue			  *	returns the value in the textfield			  *	---------------------------------------------------------- */				public function getValue():String				{					ConsoleBroadcaster.broadcast( "InputEmailText", "getValue();" );										return input_txt.text;				}							/**	reset			  *	resets field to default label			  *	---------------------------------------------------------- */				public function reset():void				{					ConsoleBroadcaster.broadcast( "InputEmailText", "reset();" );										input_txt.textColor = defaultColor;					input_txt.text = defaultLabel;				}						}	}