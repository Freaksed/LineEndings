/**	DynamicInputText  *	--------------------------------------------------------- *  *	@desc:  *		an input text field class that will let users define  *		custom error message, custom textfield color  *	--------------------------------------------------------- *  *	@developer:	Christian Widodo [christian@avatarlabs.com]  *	--------------------------------------------------------- */    	package com.avatarlabs.utils.forms	{		import flash.display.MovieClip;		import flash.events.*;		import flash.text.TextField;				import com.avatarlabs.utils.console.ConsoleBroadcaster;				public class DynamicInputText extends InputText		{			protected var _dynamicClip:MovieClip;						/**	Constructor			  *	---------------------------------------------------------- */				public function DynamicInputText()				{									}								public function set dynamicClip( m:MovieClip ):void				{					_dynamicClip = m;				}				public function get dynamicClip():MovieClip { return _dynamicClip; }								override public function init():void				{									}								public function dynamicInit():void				{					_dynamicClip.focusRect = false;				}		}	}