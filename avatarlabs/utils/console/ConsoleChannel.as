/*	ConsoleChannel *	------------------------------------------------------------------------------------------------------------------------ * *	@desc:  *	@developer: Aaron Buchanan, [aaron@avatarlabs.com] *	------------------------------------------------------------------------------------------------------------------------ * *	NOTE: the default variable will decide whether the Channel Name is included in the message output. *	------------------------------------------------------------------------------------------------------------------------ */ 		package com.avatarlabs.utils.console	{			import src.com.avatarlabs.utils.console.*;				public class ConsoleChannel		{			private var defaultChannel:Boolean = false;			private var channelLog:Array;			private var channel:String;						/*	constructor			 *	-------------------------------------------------------------------------------------------------------------------- */				public function ConsoleChannel ( c:String )				{					channel = c;					channelLog = new Array();					channelLog.push(welcomeMessage());				}							/*	private			 *	-------------------------------------------------------------------------------------------------------------------- */				private function welcomeMessage ():ConsoleChannelMessage				{					return new ConsoleChannelMessage("Console Connected to Channel: "+channel+" on "+new Date().toString());				}							/*	public			 *	-------------------------------------------------------------------------------------------------------------------- */				public function onChannelBroadcast ( cm:ConsoleMessage ):void				{					if( defaultChannel==true ){						channelLog.unshift( new ConsoleChannelMessage(cm.channel+": "+cm.message));					} else {						channelLog.unshift( new ConsoleChannelMessage(cm.message));					}				}				public function getChannelLog ():Array				{					return channelLog;				}				public function clearChannelLog ():Array				{					channelLog = new Array();					channelLog.push( new ConsoleChannelMessage("Console Connected to Channel: "+channel));					return channelLog;				}				public function setDefault ( value:Boolean ):void				{					defaultChannel = value;				}		}	}