/** UIArrowedSlider Class  *	------------------------------------------------------------------------------------  *	@dev: 	Christian Widodo [christian@avatarlabs.com]  *	@desc:	A general slider class that can go right/left or top/bottom  *			depending on the usage.  *	@todo:	fix it so that it wont snap to handle's x/y  *	------------------------------------------------------------------------------------*/  	package com.avatarlabs.utils.userinterface	{		import flash.display.MovieClip;		import flash.events.MouseEvent;				public class UIArrowedSlider extends UISlider		{			protected var _offset:Number;						/** start stage instances **/			public var downArrow_mc:MovieClip;			public var upArrow_mc:MovieClip;						/** end stage instances **/									/** Constructor			  *	------------------------------------------------------- */				public function UIArrowedSlider()				{									}							/** init			  *	------------------------------------------------------- */				override public function init():void				{					super.init();										upArrow_mc.addEventListener( MouseEvent.CLICK, handleUpArrowClick, false, 0, true );					upArrow_mc.buttonMode = true;					downArrow_mc.addEventListener( MouseEvent.CLICK, handleDownArrowClick, false, 0, true );					downArrow_mc.buttonMode = true;										_offset = .05;				}							/** set/get offset			  *	------------------------------------------------------- */				public function set offset( n:Number ):void { _offset = n; }				public function get offset():Number { return _offset; }							/** handleDownArrowClick			  *	------------------------------------------------------- */				protected function handleDownArrowClick(me:MouseEvent):void{					setOffset(_offset); 									}							/** handleUpArrowClick			  *	------------------------------------------------------- */				protected function handleUpArrowClick(me:MouseEvent):void{					setOffset(-_offset); 									}						}	}