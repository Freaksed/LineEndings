/** UISlider Class  *	------------------------------------------------------------------------------------  *	@dev: 	Christian Widodo [christian@avatarlabs.com]  *	@desc:	A general slider class that can go right/left or top/bottom  *			depending on the usage.  *	@todo:	fix it so that it wont snap to handle's x/y  *	------------------------------------------------------------------------------------*/  	package com.avatarlabs.utils.userinterface	{		import flash.display.MovieClip;		import flash.events.MouseEvent;				public class DynamicUIArrowedSlider extends UIArrowedSlider		{						/** start stage instances **/			/** end stage instances **/									/** Constructor			  *	------------------------------------------------------- */				public function DynamicUIArrowedSlider()				{									}							/** set dynamicClip			  *	------------------------------------------------------- */				public function set dynamicClip( m:MovieClip ):void				{					_dynamicClip = m;										upArrow_mc = _dynamicClip.upArrow_mc;					downArrow_mc = _dynamicClip.downArrow_mc;				}				public function get dynamicClip():MovieClip { return _dynamicClip; }							/** init			  *	------------------------------------------------------- */				override public function init():void				{									}							/** dynamicInit			  *	------------------------------------------------------- */				public function dynamicInit():void				{					upArrow_mc.addEventListener( MouseEvent.CLICK, handleUpArrowClick, false, 0, true );					upArrow_mc.buttonMode = true;					downArrow_mc.addEventListener( MouseEvent.CLICK, handleDownArrowClick, false, 0, true );					downArrow_mc.buttonMode = true;										_offset = .05;				}						}	}