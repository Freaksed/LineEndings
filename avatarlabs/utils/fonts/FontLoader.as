/**	FontLoader  *	----------------------------------------------------------------------------------- *  *	@desc: A Class to load and initialize fonts from external swf to reduce compile time and size  *		This class is an extension of CustomLoader class since it needs to load in  *		the external swf that contains fonts  *		After font is loaded, you can use FontLoader.getFont( fontName ); to get the Font  *	@developer: Christian Widodo, [christian@avatarlabs.com]  *	----------------------------------------------------------------------------------- */  	package com.avatarlabs.utils.fonts	{		import flash.events.EventDispatcher;		import flash.events.IOErrorEvent;		import flash.text.Font;				import com.avatarlabs.utils.console.*;		import com.avatarlabs.utils.events.CustomEvent;		import com.avatarlabs.utils.loader.CustomLoader;				public class FontLoader extends CustomLoader		{						/** Constructor			  *	---------------------------------------------------------------------- */				public function FontLoader()				{					super();				}							/** getEmbeddedFont			  *	returns Font class if it finds the font that is requested			  *	returns false otherwise			  *	---------------------------------------------------------------------- */				public static function getFont( fontName:String ):*				{					var embeddedFonts:Array = Font.enumerateFonts(false);										for( var i:int=0; i<embeddedFonts.length; i++ )					{						if ( embeddedFonts[i].fontName == fontName )						{							return embeddedFonts[i];						}					}										return false;				}						}	}