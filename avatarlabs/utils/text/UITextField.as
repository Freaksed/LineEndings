/** UITextField *	---------------------------------------------------------------------------- * *	@dev:	Christian W [christian@avatarlabs.com] *	@desc:	Manages sections/parts of the instruction *	---------------------------------------------------------------------------- */ 	package com.avatarlabs.utils.text	{		import flash.display.MovieClip;		import flash.events.*;		import flash.text.TextField;		import flash.text.TextFieldAutoSize;		import flash.text.TextFormat;				import com.avatarlabs.utils.console.ConsoleBroadcaster;		import com.avatarlabs.utils.events.CustomEvent;		import com.avatarlabs.utils.events.EventNotificationCenter;		import com.avatarlabs.utils.fonts.FontLoader;				public class UITextField extends MovieClip		{			protected var _textField:TextField;			protected var _textFormat:TextFormat;			protected var _text:String;			protected var _isHTMLText:Boolean;					/** Constructor		  *	-------------------------------------------------------------- */			public function UITextField()			{				_isHTMLText = false;			}					/** set/get textField		  *	-------------------------------------------------------------- */			public function set textField( _t:TextField ):void			{				_textField = _t;				_textField.embedFonts = true;								_textFormat = _textField.getTextFormat();			}						public function get textField():TextField			{				return _textField;			}						public function set text( _t:String ):void			{				//trace( "_textField: "+_textField );				_text = _t;			}					/** set textFormat		  *	-------------------------------------------------------------- 			public function set textFormat( _t:TextFormat ):void			{				_textFormat = _t;							}*/					/** set font		  *	-------------------------------------------------------------- */			public function set fontName( fontName ):void			{				_textFormat.font = FontLoader.getFont(fontName).fontName;								_textField.setTextFormat( _textFormat );			}					/** set/get embedFonts		  *	-------------------------------------------------------------- */			public function set embedFonts( e:Boolean ):void			{				_textField.embedFonts = e;			}						public function get embedFonts():Boolean			{				return _textField.embedFonts;			}					/** set/get isHTMLText		  *	-------------------------------------------------------------- */			public function set isHTMLText( h:Boolean ):void			{				_isHTMLText = h;			}						public function get isHTMLText():Boolean			{				return _isHTMLText;			}					/** setHTMLText		  *	-------------------------------------------------------------- */			public function setHTMLText( newHTMLText:String ):void			{				_textFormat = _textField.getTextFormat();								_textField.htmlText = newHTMLText;								_textFormat.size = _textField.getTextFormat().size;								_textField.setTextFormat( _textFormat );			}					/** setText		  *	-------------------------------------------------------------- */			public function setText( newText:String ):void			{				_textFormat = _textField.getTextFormat();				_textField.text = newText;				_textField.setTextFormat( _textFormat );			}					/** init		  *	-------------------------------------------------------------- */			public function init():void			{				if( _isHTMLText )				{					_textField.htmlText = _text;										var temp_tf:TextFormat = _textField.getTextFormat();										_textFormat.size = temp_tf.size;					_textField.setTextFormat( _textFormat );				}				else				{					_textField.text = _text;					_textField.setTextFormat( _textFormat );				}												onInit();			}					/** onInit		  *	-------------------------------------------------------------- */			public function onInit():void			{				dispatchEvent( new Event(Event.INIT) );			}					}			}